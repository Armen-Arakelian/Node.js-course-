extends layout

block content
  form.form-horizontal(class="col-xs-6" action='/login' method='POST')
    .row.form-inline
      label(for="email" class="col-xs-3") Email
      input(class="form-control col-xs-3" type="text" name="email" required)
    .row.form-inline
      label(for="password" class="col-xs-3") Password
      input(class="form-control col-xs-3" type="text" name="password" required)
    .row.form-inline
      button(class="btn btn-primary col-xs-12 col-sm-6" type="submit") log in
    .row.form-inline
      if (message)
        .status.alert.alert-warning(role="alert") #{message}
    br
    a(href="/" class="btn btn-warning") Home page
    br
    br
    a(href="/auth/google" class="btn btn-warning") log in through google